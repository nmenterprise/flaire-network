{
  "version": 2,
  "builds": [
    {
      "src": "flare-network/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    },
    {
      "src": "build_files.sh",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "staticfiles/"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "flare-network/wsgi.py"
    }
    {
      "src": "/ws/(.*)",
      "dest": "flare-network/asgi.py"  // Point to ASGI application for WebSocket connections
    }
  ],
  "outputDirectory": "staticfiles/"
}
